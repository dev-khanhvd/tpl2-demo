   </div>
   <div class="mx-auto header-search dnone md:block order-1 lg:order-none">
    <div class="mx-auto md:px-5">
     <div class="search-bar relative">
      <quick-search class="quick-search">
       <form action="/search" class="m-0 flex bg-background pl-1 py-1 rounded items-center relative border border-neutral-50" method="get" role="search">
        <select aria-label="Danh mục sản phẩm" class="form-select border-0 focus:ring-transparent collection-options">
         <option value="">
          Danh mục sản phẩm
         </option>
         <option value="1004289423">
          Sữa bột cao cấp
         </option>
         <option value="1004289423">
          Sữa tươi các loại
         </option>
         <option value="1004289429">
          Bỉm tã khuyến mãi
         </option>
         <option value="1004289424">
          Ăn dặm, dinh dưỡng
         </option>
         <option value="1004289424">
