<ul class="header-menu-list menu-header">
    {% set menu = getMenus({'type':'header'}) %}
    {% if menu is not empty %}
        {% for m in menu %}
            {% if m.type in m.typeCates %}
                {% set categoryCustom = getCategoryTypeMenu(m.type) %}
                {% if(categoryCustom is not empty) %}
                    {% for c in categoryCustom %}
                    <li class="header-menu-list-item {% if c.childs %}has-child{% endif %}">
                        <div class="wrap-group-menu">
                            <a href="{{ c.viewLink }}">
                                <span>{{ c.name }}</span>
                            </a>
                            <div class="box-arrow-svg">
                                {% if c.childs %}
                                    <i class="fa-thin fa-angle-down"></i>
                                {% endif %}
                            </div>
                        </div>
                        {% if c.childs %}
                            <div class="header-menu-mega">
                                <div class="header-menu-mega-wrapper">
                                    <ul class="header-menu-mega-list">
                                        {% for c1 in c.childs %}
                                            <li class="header-menu-mega-item">
                                                <div class="wrap-group-menu">
                                                    <a href="{{ c1.viewLink }}">
                                                        <span>{{ c1.name }}</span>
                                                    </a>
                                                    {% if c1.childs %}
                                                        <div class="box-arrow-svg">
                                                            <i class="fa-thin fa-angle-down"></i>
                                                        </div>
                                                    {% endif %}
                                                </div>
                                                {% if c1.childs %}
                                                    <ul class="header-menu-mega-sub">
                                                        <li class="back-menu">
                                                            <a href="#" class="active">
                                                                <span>{{ c1.name }}</span>
                                                            </a>
                                                        </li>
                                                        {% for c2 in c1.childs %}
                                                            <li class="back-menu">
                                                                <a href="{{ c2.viewLink }}">
                                                                    <span>{{ c2.name }}</span>
                                                                </a>
                                                            </li>
                                                        {% endfor %}
                                                    </ul>
                                                {% endif %}
                                            </li>
                                        {% endfor %}
                                    </ul>
                                </div>
                            </div>
                        {% endif %}
                    </li>
                    {% endfor %}
                {% endif %}
            {% else %}
                <li class="header-menu-list-item {% if m.childs %}has-child{% endif %}">
                    <div class="wrap-group-menu">
                        <a href="{{ m.viewLink }}">
                            <span>{{ m.name }}</span>
                        </a>
                        <div class="box-arrow-svg">
                            {% if m.childs %}
                                <i class="fa-thin fa-angle-down"></i>
                            {% endif %}
                        </div>
                    </div>
                    {% if m.childs %}
                        <div class="header-menu-mega">
                            <div class="header-menu-mega-wrapper">
                                <ul class="header-menu-mega-list">
                                    {% for m1 in m.childs %}
                                        <li class="header-menu-mega-item">
                                            <div class="wrap-group-menu">
                                                <a href="{{ m1.viewLink }}">
                                                    <span>{{ m1.name }}</span>
                                                </a>
                                            </div>
                                            {% if m1.childs %}
                                                <ul class="header-menu-mega-sub">
                                                    <li class="back-menu">
                                                        <a href="#" class="active">
                                                            <span>{{ m1.name }}</span>
                                                        </a>
                                                    </li>
                                                    {% for m2 in m1.childs %}
                                                        <li>
                                                            <a href="{{ m2.viewLink }}">
                                                                <span>{{ m2.name }}</span>
                                                            </a>
                                                        </li>
                                                    {% endfor %}
                                                </ul>
                                            {% endif %}
                                        </li>
                                    {% endfor %}
                                </ul>
                            </div>
                        </div>
                    {% endif %}
                </li>
            {% endif %}
        {% endfor %}
    {% endif %}
</ul>
