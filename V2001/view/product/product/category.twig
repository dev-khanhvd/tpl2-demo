               <label for="data-size-p5">
                XXL
               </label>
              </li>
              <li>
               <input data-size="(variant:product=36)" id="data-size-p6" name="size-filter" type="checkbox" value="36"/>
               <label for="data-size-p6">
                36
               </label>
              </li>
              <li>
               <input data-size="(variant:product=37)" id="data-size-p7" name="size-filter" type="checkbox" value="37"/>
               <label for="data-size-p7">
                37
               </label>
              </li>
              <li>
               <input data-size="(variant:product=38)" id="data-size-p8" name="size-filter" type="checkbox" value="38"/>
               <label for="data-size-p8">
                38
               </label>
              </li>
              <li>
               <input data-size="(variant:product=39)" id="data-size-p9" name="size-filter" type="checkbox" value="39"/>
               <label for="data-size-p9">
                39
               </label>
              </li>
             </ul>
            </div>
           </div>
          </div>
         </div>
         <div class="filter-footer">
          <button class="btn-filter btn-filter-clear" id="clear-btn-filter">
           Hủy
          </button>
          <button class="btn-filter btn-filter-apply" id="apply-btn-filter">
           Áp dụng
          </button>
         </div>
        </div>
       </div>
      </div>
     </div>
